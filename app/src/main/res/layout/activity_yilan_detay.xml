<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.YilanDetayActivity">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/imgKapak"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/kapakDetayViewÄ°mageHeight"
                    tools:srcCompat="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/txtBaslik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/detayBaslikPedding"
                    android:text="@string/txtBaslik"
                    android:textSize="@dimen/detayBaslikTextSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtDetay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/detayDetayPadding"
                    android:text="@string/txtDetay"
                    android:textSize="@dimen/detayDetayTextSize" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>